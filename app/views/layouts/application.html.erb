<!DOCTYPE html>
<html>
  <head>
    <title>Minerva</title>
  <link rel="icon" href="/assets/owl.png">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

   <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/js/materialize.min.js"></script>

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <style>
    .navb {
        box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.19), 0 0 10px 0 rgba(0, 0, 0, 0.19);
    }
    
    nav {
        background-color: #212121;
    }
  </style>
  <script>
    $(document).ready(function() {
      $(".dropdown-button").dropdown();
    });
</script>
  </head>

  <body>
    <!-- Dropdown -->
<ul id="dropdown1" class="dropdown-content">
  <li><a href=<%= users_index_path %>>마이 페이지</a></li>
  <li class="divider"></li>
  <li><a href="<%= destroy_user_session_path %>" data-method="DELETE">로그아웃</a></li>
</ul>

<nav class="navb">
  <div class="navb-wrapper">
    <div class="container">
    <a href=<%= evaluations_path %> class="brand-logo">Minerva</a>
    <ul class="right hide-on-med-and-down">
            <li><a href=<%= courses_path %>>과목 목록</a></li>
        <% if current_user %>
              <li><a href=<%= new_evaluation_path %>>새 평가</a></li>
  <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><%= current_user.email %><i class="material-icons right">arrow_drop_down</i></a></li>
    <% else %>
            <li><a href=<%= new_user_registration_path %>>회원가입</a></li>
            <li><a href=<%= new_user_session_path %>>로그인</a></li>
        <% end %>
    </ul>
  </div>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
