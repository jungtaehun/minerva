<!DOCTYPE html>
<html>
  <head>
    <title>Minerva</title>
  <link rel="icon" href="/assets/owl.png">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <style>
    body {
      font-family: "Quicksand", sans-serif;
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }

    main {
      flex: 1 0 auto;
    }

    footer.page-footer {
      background-color: #9ccc65;
    }

    .navb {
        box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.19), 0 0 10px 0 rgba(0, 0, 0, 0.19);
    }
    
    nav {
        background-color: #212121;
    }
  </style>
  <script>
    $(document).ready(function() {
      $(".dropdown-button").dropdown();
    });
</script>
  </head>

  <body>

  <div class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <div class="navbar-brand">
        <%= link_to 'Minerva', evaluations_path, class: 'navbar-brand brand-logo' %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
          <li><%= link_to '과목 목록', courses_path, class: "nav-item nav-link" %></li>
          <% if current_user %>
            <li><%= link_to '새 평가', new_evaluation_path, class: "nav-item nav-link" %></li>
          <% end %>
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if current_user %>
            <li><%= link_to current_user.email, users_index_path, class: "nav-item nav-link" %></li>
            <li><%= link_to '로그아웃', destroy_user_session_path, class: "nav-item nav-link", :method => 'delete' %></li>
          <% else %>
            <li><%= link_to '로그인', new_user_session_path, class: "nav-item nav-link" %></li>
            <li><%= link_to '회원가입', new_user_registration_path, class: "nav-item nav-link" %></li>
          <% end %>
        </ul>
      </div>

    </div>
  </div>
