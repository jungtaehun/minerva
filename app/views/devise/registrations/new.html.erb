<style>
    .kut-minerva {
        background-image: url("/assets/moonowl.jpg");
        width: 100%;
        height: -webkit-fill-available;
        background-position: center;
        background-repeat: no-repeat;
        position: fixed;
    }
    
        .container {
        position: absolute;
        height: 100%;
        left: 50%;
        transform: translateX(-50%);
    }
    
    .card-panel {
        position: relative;
        width: 100%;
        background: rgba(255, 255, 255, 0.7);
        border-radius: 10px;
        text-align: center;
        top: 45%;
        transform: translateY(-50%);
        -webkit-transform: translateY(-50%);
        -ms-transform: translateY(-50%); 
    }
    
    .input-field {
        display: inline-block;
        width: 25%;
    }
    
    .btn {
        width: 25%;
    }
  </style>
  
  <div class="kut-minerva">
    <div class="container">
        <div class="card-panel z-depth-4">
            <h5>한국기술교육대학교 강의평가 회원가입</h5>
            <br>
            <div class="form-group">
                    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <h6 style="font-style: italic; font-weight:100i; padding-left:50%; color:red;"><%= f.error_notification %></h6>
                      <br>
                    <div class="row">
                        <div class="input-field">
                              <%= f.email_field :email, required: true, class: "validate form-control" %>
                              <label for="email" data-error="이메일을 정확히 입력해주세요.">이메일</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field">
                              <%= f.password_field :password, required: true, autocomplete: "off", class: "validate form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                              <label for="password">비밀번호</label>  
                        </div>
                    </div>
                    
                        <div class="row">
                        <div class="input-field">
                              <%= f.password_field :password_confirmation, required: true, autocomplete: "off", class: "validate form-control", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                              <label for="password">비밀번호 확인</label>  
                        </div>
                    </div>
                    
                    <%= button_tag(type: "submit", class: "btn waves-effect waves-light z-depth-3 indigo darken-2") do %>
                    회원가입 <i class="material-icons left">vpn_key</i>
                    <% end %>
            <% end %>
            </div>
        </div>
    </div>
</div>




